generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String          @id @default(uuid()) @db.Uuid
  name          String?
  username      String          @unique
  email         String          @unique
  avatarUrl     String?
  role          String?
  models        Models[]
  favorites     Models[]        @relation("FavoriteModels")
  followers     Users[]         @relation("UserFollows")
  following     Users[]         @relation("UserFollows")
  collections   Collections[]
  courses       Courses[]
  comments      Comments[]
  printRequests PrintRequests[]
}

model Models {
  id           String          @id @default(uuid())
  name         String
  description  String?
  grade        Float?
  likes        Int?
  views        Int?
  uploadTime   DateTime?
  owner        Users?          @relation(fields: [ownerId], references: [id])
  ownerId      String?         @db.Uuid
  modelItems   ModelItems[]
  favoritedBy  Users[]         @relation("FavoriteModels")
  collection   Collections?    @relation(fields: [collectionId], references: [id])
  collectionId String?
  comments     Comments[]
  printRequest PrintRequests[]
}

model ModelItems {
  id            String @id @default(uuid())
  name          String
  modelUrl      String @unique
  modelParent   Models @relation(fields: [modelParentId], references: [id])
  modelParentId String
}

model Collections {
  id      String   @id @default(uuid())
  owner   Users    @relation(fields: [ownerId], references: [id])
  ownerId String   @db.Uuid
  models  Models[]
}

model Courses {
  id          String  @id @default(uuid())
  name        String  @unique
  purchases   Int
  description String
  users       Users?  @relation(fields: [usersId], references: [id])
  usersId     String? @db.Uuid
}

model Comments {
  id      String  @id @default(uuid())
  text    String?
  likes   Int?
  owner   Users?  @relation(fields: [ownerId], references: [id])
  ownerId String? @db.Uuid
  model   Models? @relation(fields: [modelId], references: [id])
  modelId String?
}

enum PrintRequestStatus {
  WAITING
  PROCESSING
  DONE
}

model PrintRequests {
  id        String             @id @default(uuid())
  printDate DateTime
  status    PrintRequestStatus
  user      Users              @relation(fields: [userId], references: [id])
  userId    String             @db.Uuid
  model     Models             @relation(fields: [modelId], references: [id])
  modelId   String
}
